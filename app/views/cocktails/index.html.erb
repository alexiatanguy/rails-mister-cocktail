  <div class="cards test">
  <% @cocktails.each do |cocktail|  %>
  <% if cocktail.photo.attached? %>

  <div class="card-category div-size" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, crop: :fill %>)">
    <h2 class="fonts"> <%= link_to cocktail.name, cocktail_path(cocktail) %> </h2>
  </div>
<% else %>

  <div class="card-category div-size" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/338713/pexels-photo-338713.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500)">
    <h2 class="fonts"> <%= link_to cocktail.name, cocktail_path(cocktail) %> </h2>
  </div>

<% end %>
<% end %>
</div>
